pkgname=benthos-logbook
pkgver=0.1
pkgrel=1
pkgdesc="Benthos Scuba Diving Logbook Library for C++"
arch=('i686' 'x86_64')
license=('bsd')
url="http://benthos-log.net"
depends=('boost-libs' 'yajl' 'sqlite')
optdepends=()
makedepends=('cmake' 'boost' 'python2')
conflicts=()
replaces=()
backup=()
source=("http://benthos-log.net/files/${pkgname}-${pkgver}.tar.bz2")
md5sums=()

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	python2 generate_countries.py || return 1
	mkdir build
	cd build
	cmake .. || return 1
	make || return 1
}

package() {
	make DESTDIR="${pkgdir} install || return 1
	install -Dm 644 ../LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}